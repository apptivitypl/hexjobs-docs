{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Hexjobs docs",
  "colors": {
    "primary": "#6367EB",
    "light": "#6367EB",
    "dark": "#6367EB"
  },
  "favicon": {
    "light": "/icon-hexjobs-black.svg",
    "dark": "/icon-hexjobs-white.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          "introduction"
        ]
      },
      {
        "tab": "MCP Server",
        "pages": [
          "home/mcp/introduction",
          "home/mcp/tools",
          "home/mcp/examples",
          "home/mcp/troubleshooting"
        ]
      }
    ],
    "global": {
      "languages": [
        {
          "language": "en",
          "default": true,
          "href": "/"
        },
        {
          "language": "pl",
          "href": "/pl"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@hexjobs.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Visit Hexjobs",
      "href": "https://hexjobs.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/apptivitypl"
    }
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "seo": {
    "indexing": "navigable"
  }
}
